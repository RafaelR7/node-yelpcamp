<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-md-12 text-center">
            <h1>Create a new Campground</h1>
        </div>

        <div class="col-md-5">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" id="" placeholder="description" rows="4"></textarea>
                </div>
                
                <button class="btn btn-success btn-block">Submit</button>
                
            </form>
            <div class="mt-3">
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
        
    </div>
    
</div>


<% include ../partials/footer %>