<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-md-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>

        <div class="col-md-5">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" id="" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" id="" value="<%= campground.image %>">
                </div> 
                <div class="form-group">
                    <textarea class="form-control" type="text" name="campground[description]" id="" rows="4"><%= campground.description %></textarea>
                </div>
                
                <button class="btn btn-success btn-block">Submit</button>
                
            </form>
            <div class="mt-3">
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
        
    </div>
</div>


<% include ../partials/footer %>