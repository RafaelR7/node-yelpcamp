<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>Welcome to YelpCamp</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-info" href="/campgrounds/new"><i class="fas fa-plus"></i> Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-sm-6 col-md-6 col-lg-3">
                <div class="card mb-3">
                    <img class="card-img-top" style="max-height:10rem" src="<%= campground.image %>" alt="Card image cap">
                    <div class="card-body text-center">
                        <p class="card-text"><%= campground.name %></p>
                        <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-info">Show more info</a></p>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>    
    </div>
    
    <% include ../partials/footer %>
    