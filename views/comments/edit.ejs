<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-md-12 text-center">
            <h1>Edit Comment</h1>
        </div>

        <div class="col-md-5">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" id="" rows="4"><%=comment.text%></textarea>
                </div>
                
                <button class="btn btn-success btn-block">Submit</button>
                
            </form>
            <div class="mt-3">
                <a href="/campgrounds/<%= campground_id %>">Go back</a>
            </div>
        </div>
        
    </div>
</div>


<% include ../partials/footer %>